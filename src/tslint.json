{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "fuse",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "fuse",
            "kebab-case"
        ],
        "indent": [
            true, 
            "tabs",
             4
        ]
    }
}
